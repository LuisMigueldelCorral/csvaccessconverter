<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav.ejs %>

  <div class="jumbotron text-center">
    <div class="container">
    <div class="row">
      <div class="col-md-6">
          <p>Tipos de Botones</p>
          <button type="button" class="btn btn-primary col-md-12">Primary</button>
          <button type="button" class="btn btn-secondary col-md-12">Secondary</button>
          <button type="button" class="btn btn-success col-md-12">Success</button>
          <button type="button" class="btn btn-danger col-md-12">Danger</button>
          <button type="button" class="btn btn-warning col-md-12">Warning</button>
          <button type="button" class="btn btn-info col-md-12">Info</button>
          <button type="button" class="btn btn-light col-md-12">Light</button>
          <button type="button" class="btn btn-dark col-md-12">Dark</button>            
          <button type="button" class="btn btn-link col-md-12">Link</button>
      </div>    
      <div class="col-md-6">
          <p>Hola Mundo!</p>
      </div>    
    </div>
    <!-- MODAL -->
    <div class="row">
      <div class="col-md-12">       
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
          Launch demo modal
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                Hola Mundo!
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </div>
        <!-- MODAL -->
    </div>
  </div>    

  <div class="alert alert-info text-center" role="alert">
    <p>Alert</p>
  </div>
</div>


</body>
</html>
